{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": false,
    "declaration": true,
    "sourceMap": false,
    "pretty": true,
    "newLine": "lf",
    "outDir": "dist",
    "rootDir": "src",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "src"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
